clearFormDiv('<%= @flash_message || '' -%>');
$("#dvd_quick").html('<%= raw video_quick_link -%>');
<%- unless @unlock -%>
localStorage.removeItem('event[title]');
localStorage.removeItem('event[description]');
<%- end -%>


<%- if params[:viewer] -%>
  $("#listing-<%= @event.id -%>").replaceWith("<%= escape_javascript(render(:partial => 'listing_span', :locals =>{:event => @event})) -%>");
<%- elsif @after_id -%>
  $("#event-<%= @after_id -%>").after("<%= escape_javascript(render(:partial => 'one_event', :locals => {:event => @event})) -%>");
<%- else -%>
  <%- if @event.video -%>
    $("#vid_<%= @event.video.id -%>").replaceWith("<%= escape_javascript(render(:partial => 'video_block', :locals => {:video => @event.video, :piece_id => current_piece.id})) -%>")
  <%- else -%>
    <%- if @create -%>
      $('#events_presentation').append("<%= escape_javascript(render(:partial => 'one_event', :locals => {:event => @event})) -%>")
    <%- else # if created-%>
      $("#event-<%= @event.id -%>").replaceWith("<%= escape_javascript(render(:partial => 'one_event', :locals => {:event => @event})) -%>");
    <%- end # if not created-%>
  <%- end -%>
<%- end  -%>