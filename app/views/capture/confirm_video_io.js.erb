<%- if @stopping -%>
alert('stopping')
$("#vid_<%= @video.id-%>").replaceWith("<%= escape_javascript(render(:partial => 'video_block',:locals =>{:video => @video, :piece_id => current_piece.id}))-%>")
<%- else -%>
$("#form_div").hide();
$("#form_div").html('');
$('#events_presentation').append("<%= render(:partial => 'video_block',:locals =>{:video => @video, :piece_id => current_piece.id}) -%>")
<%- end -%>
var lastEvent = $(".fi:last")
$("#dvd_quick").html('<%= raw video_quick_link(@video) -%>')
$(".hdble").show();
flashMessage('<%= @flash_message || '' -%>');
updateVideoTime();