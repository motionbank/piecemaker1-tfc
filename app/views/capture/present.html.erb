  <div class = 'menclose'></div>
  <div id='vmenin'>
    <br />
    <%= put_v_menu %>
  </div>
</div>
<div id = 'sub-scene-menu' class = 'menn sum' style='display:none'>
  <div id = 'smenid'></div>
  <div class = 'menclose'></div>
  <div id='smenin'>
    <br />
    <%= put_s_menu %>
  </div>
</div>
<%- end -%>
