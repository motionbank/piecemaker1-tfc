    %li= link_to("Upload Days Videos",{:controller => 'video',:action => 'process_days_videos',:id => session[:pieceid]},:class => 'process')

  %li= link_to('Marker List',{:controller => 'capture', :action => 'marker_list',:id => session[:pieceid]})
  



